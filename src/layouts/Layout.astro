---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import WhatsappIcon from "../icons/Whatsapp.astro";

import { ViewTransitions } from "astro:transitions";
import "@fontsource-variable/onest";
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.png" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="">
    <div class="fixed left-0 top-0 -z-10 h-full w-full">
      <div
        class="absolute inset-0 -z-10 h-full w-full bg-white bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"
      >
        <div
          class="absolute inset-0 -z-10 h-full w-full bg-[va] [background:radial-gradient(125%_125%_at_50%_10%,#f9f6ed_45%,#e3ac20_100%)]"
        >
        </div>
      </div>
    </div>
    <Header />
    <slot />
    <Footer />
    <a href='https://wa.link/1nid20"' class="fixed">
      <WhatsappIcon
        class="absolute size-14 top-[630px] left-[1450px] rounded-full bg-white shadow-xl shadow-green-500/70 hover:-translate-y-3 transition-all duration-200"
      />
    </a>
    <style is:global>
      @import url("https://fonts.cdnfonts.com/css/caviar-dreams");
      :root {
        color-scheme: light dark;
        --background: #f9f6ed;
        --letra: #f1e9d0;
        --a: #caa152;
        --titulos: #7f4f29;
        --badge: #ff790c;
      }
      html {
        font-family: "Caviar Dreams", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      @media (prefers-reduced-motion) {
        html {
          scroll-behavior: auto;
        }
      }
      @media (prefers-color-scheme: dark) {
        body {
          color: var(--letra);
        }
      }
      @media (prefers-color-scheme: light) {
        body {
          color: rgba(255, 255, 255, 0.9);
        }
      }
    </style>
  </body>
</html>
